<div class="container-fluid fill">
	<div class="row fill">
		<div class="col-md-6 col-md-offset-3 vertical-center fill text-center">
			<div class="container-fluid">
				<h1 class="animated bounce" style="font-size: 500%;">What's your name?</h1>
				<br>
				<%= form_tag get_name_path, method: "post", remote: true do %>
					<div class="form-group">
						<%= text_field_tag :name, nil, class: "form-control" %>
					</div>
				<% end %>
				<div id="gender-icon"></div>
			</div>
		</div>
	</div>
</div>